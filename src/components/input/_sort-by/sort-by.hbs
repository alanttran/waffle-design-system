<form role="form" class="sorter" method="get">
  <fieldset>
    <legend>Sort by</legend>
    {{> @radio-button name="sort-method" id="most-recent" label="most recent"}}
    {{> @radio-button name="sort-method" id="popularity" label="popularity"}}
    {{> @radio-button name="sort-method" id="price-low-high" label="price (low to high)"}}
    {{> @radio-button name="sort-method" id="price-high-low" label="price (high to low)"}}
  </fieldset>
  <button type="submit">Sort</button>
</form>

<style>
  .sorter [type="radio"]{
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    border: 0 !important;
    overflow: hidden !important;
    clip: rect(1px, 1px, 1px, 1px);
  }
  [type="radio"] + label{
    cursor: pointer;
    padding: .5rem;
    border: 1px solid transparent;
    border-radius: 4px;
  }

  [type="radio"]:focus + label{
    border-color: steelblue;
  }

  [type="radio"]:checked + label{
    border-color: steelblue;
  }
</style>